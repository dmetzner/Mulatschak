<resources>

    <!-- Colors -->
    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="gray80">#808080</color>
    <color name="gray160">#A0A0A0</color>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- :::::::::::::::::::: Back Button :::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
    <style name="BackButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/ic_menu_revert</item>
    </style>

    <!-- :::::::::::::::::::: Settings Title ::::::::::::::::::::::::::::::::::::::::::::::::::: -->
    <style name="SettingsTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="SettingsTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">33dp</item>
    </style>




</resources>
