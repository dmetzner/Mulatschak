<?xml version="1.0" encoding="utf-8"?>

<!-- MAIN MENU -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/startScreenDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/startScreenDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageButton
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/change_language_button"
                    android:layout_width="51dp"
                    android:layout_height="42dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/ic_menu_preferences"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-25dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:padding="0dp"
                    >


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:src="@drawable/title_graphic"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="Hallo"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/startScreenLight"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:id="@+id/singleview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="20sp"
                            android:text="@string/single_player_settings_title"
                            android:textColor="@color/my_dark_gray" />

                        <Button
                            android:id="@+id/single_player_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/multi_player_settings_quick_game_button"
                            android:textSize="25sp">
                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/startScreenDark"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="25dp">

                        <TextView
                            android:id="@+id/multiview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="@string/multi_player_settings_title" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="0dp">


                        <Button
                            android:id="@+id/multi_player_quick_game_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.48"
                            android:text="@string/multi_player_settings_quick_game_button" />

                        <Button
                            android:id="@+id/multi_player_invite_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.48"
                            android:text="@string/multi_player_settings_invite_button" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/multi_player_invitations_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/multi_player_settings_invitations_button" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@color/startScreenLight"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/my_dark_gray"
                        android:text="@string/see_your_progress" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/show_achievements_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="48"
                                android:text="@string/show_achievements"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/show_leaderboards_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="48"
                                android:text="@string/show_leaderboards"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_in_bar"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/my_dark_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/sign_in_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/sign_in_why"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_out_bar"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/my_dark_gray"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.76"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/you_are_signed_in"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/sign_out_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:text="@string/sign_out"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
